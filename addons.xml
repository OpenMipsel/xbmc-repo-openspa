<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
	<addon id="repository.xbmc-repo-openspa" name="OpenSPA XBMC Repo" version="1.0.0" provider-name="xbmc-repo-openspa">
		<extension point="xbmc.addon.repository" name="OpenSPA XBMC Repo">
			<info>http://github.com/OpenSpa/xbmc-repo-openspa/raw/master/addons.xml</info>
			<checksum>http://github.com/OpenSpa/xbmc-repo-openspa/raw/master/addons.xml.md5</checksum>
			<datadir zip="true">http://github.com/OpenSpa/xbmc-repo-openspa/raw/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
			<summary>XBMC Addons by OpenSPA</summary>
			<description>Addons created and recopiled by OpenSPA.</description>
			<disclaimer>The owners and submitters to this repository do not host or distribute any of the content displayed by these addons nor do they have any affiliation with the content providers.</disclaimer>
			<platform>all</platform>
	</extension>
</addon>

<addon id="plugin.video.superiptv" name="SuperIPTV" version="0.0.1" provider-name="openspa">
	<requires>
		<import addon="xbmc.python" version="2.0"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">SuperIPTV</summary>
		<description lang="en">Watch iptv channel in your XBMC</description>
		<summary lang="es">SuperIPTV</summary>
		<description lang="es">Visualiza canales iptv en tu XBMC</description>
		<platform>all</platform>
		<forum>http://openspa.info</forum>
	</extension>
</addon>
</addons>
